{
  "name": "autentication",
  "version": "1.0.0",
  "description": "Microserviço de autenticação enterprise com arquitetura hexagonal e segurança avançada",
  "main": "src/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start ecosystem.config.cjs",
    "dev": "cross-env NODE_ENV=development pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop autenticacao",
    "restart": "pm2 restart autenticacao",
    "logs": "pm2 logs autenticacao",
    "status": "pm2 status",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --detectOpenHandles --forceExit",
    "test:unit": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest tests/unit --detectOpenHandles --forceExit",
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest tests/integration --detectOpenHandles --forceExit",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --detectOpenHandles --forceExit",
    "test:load": "artillery run tests/load/load-test.yml",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "build:docker": "docker build -t auth-service .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "nodejs",
    "authentication",
    "microservice", 
    "jwt",
    "security",
    "hexagonal-architecture",
    "express",
    "clustering"
  ],
  "author": "Dioney Froes",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.25.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pm2": "^6.0.8",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^7.1.1",
    "redis": "^5.5.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15"
  },
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@eslint/js": "^9.30.1",
    "@jest/globals": "^30.0.3",
    "artillery": "^2.0.23",
    "babel-jest": "^30.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "jest": "^30.0.3",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.1.1"
  }
}
